<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_github_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_sync"
        tools:srcCompat="@android:drawable/stat_notify_sync" />

    <Button
        android:id="@+id/buttonListWorkflows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_workflows" />

    <ListView
        android:id="@+id/listViewWorkflows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonTriggerWorkflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trigger_workflow" />
</LinearLayout>
