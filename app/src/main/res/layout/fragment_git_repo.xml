<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/editTextRepoPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/repo_path"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonInitRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_repo" />

    <EditText
        android:id="@+id/editTextCommitMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/commit_message"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonCommit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commit_changes" />

    <EditText
        android:id="@+id/editTextBranchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/branch_name"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonCreateBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_branch" />

    <Button
        android:id="@+id/buttonCheckoutBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkout_branch" />

    <Button
        android:id="@+id/buttonMergeBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/merge_branch" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    
</LinearLayout>