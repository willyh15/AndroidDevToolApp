<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextRepoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/repository_name"
        android:minHeight="48dp"
        android:inputType="text"
        android:autofillHints="name" />

    <EditText
        android:id="@+id/editTextRepoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/repository_description"
        android:minHeight="48dp"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonCreateRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_repository" />
</LinearLayout>